extends layout

block content
    div(class="w3-display-container" style="padding:10px")
        h2.page-header Registration
        if errors
            each error, i in errors
                div.alert.alert-danger #{error.msg}
        form(method='post', action='/catalog/register', enctype='multipart/form-data')
            div(class="form-group")
                label(class="w3-col m6") Name
                input(class="w3-input w3-border" name='name', type='text', placeholder='Enter Name')
            div(class="form-group")
                label(class="w3-col m6") Email
                input(class="w3-input w3-border" name='email', type='email', placeholder='Enter Email')
            div(class="form-group")
                label(class="w3-col m6") Username
                input(class="w3-input w3-border" name='username', type='text', placeholder='Enter Username')
            div(class="form-group")
                label(class="w3-col m6") Password
                input(class="w3-input w3-border" name='password', type='password', placeholder='Enter Password')

            input(class="w3-button " type='submit', name='submit', value='Register' style="border-radius:.25rem; margin-bottom:30px")